extends layout

block content
    h1= title
    if !currentUser
        h3 Welcome to Covid App(working on name)
        a(href='/login') Login 
        | or 
        a(href='/sign-up') Sign Up 
    if currentUser 
        h3 Welcome back, #{currentUser.name}
    if posts
        h3 Posts:
        ol  
            for post in posts 
                li
                    a(href=post.url)=post.name