extends layout

block content
    h1= title
    if !currentUser
        h3 Welcome to Covid App(working on name)
        a(href='/login') Login 
        | or 
        a(href='/sign-up') Sign Up 
    if currentUser 
        h3 Welcome back, #{currentUser.name}
        a(href='/logout') Logout 
    if posts
        ul  
            for post in posts 
                li
                    a(href=post.url)=post.description